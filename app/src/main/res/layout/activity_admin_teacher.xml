<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@drawable/mine_background"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/school"
                        android:textSize="30dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="吉林化工学院"/>

                    <TextView
                        android:id="@+id/name"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/size_00_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_marginLeft="@dimen/size_00_22"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/size_00_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前课堂数量:"/>
                <TextView
                    android:id="@+id/class_number"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/size_00_22"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/size_00_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"/>
            </LinearLayout>

            <lab.jlhgxu520.equipment.views.MaxHeightListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/addClass"
                android:layout_gravity="center"
                android:text="添加教室"
                android:textSize="16dp"
                android:gravity="center"
                android:background="@drawable/text_button_shape_background"
                android:textColor="@color/white"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="12dp"
                android:layout_width="200dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>